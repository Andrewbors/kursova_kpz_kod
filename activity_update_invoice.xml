<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateInvoiceActivity"
    android:paddingHorizontal="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/invoiceUpdNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_weight="1"
                android:background="@color/bg_primary"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:hint="ПІБ" />

            <Spinner
                android:id="@+id/invoiceUpdPersonTypeSpinner"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:background="@color/bg_primary"
                />

            <EditText
                android:id="@+id/invoiceUpdAddressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:layout_weight="1"
                android:background="@color/bg_primary"
                android:ems="10"
                android:hint="Адреса"
                android:inputType="textPersonName"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp" />

            <EditText
                android:id="@+id/invoiceUpdPhoneInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:background="@color/bg_primary"
                android:ems="10"
                android:hint="Номер телефону"
                android:inputType="textPersonName"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp" />

            <EditText
                android:id="@+id/invoiceUpdDocumentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@color/bg_primary"
                android:ems="10"
                android:hint="Код документа"
                android:inputType="textPersonName"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp" />

            <EditText
                android:id="@+id/invoiceUpdBankInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@color/bg_primary"
                android:ems="10"
                android:hint="Назва банку"
                android:inputType="textPersonName"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp" />

            <EditText
                android:id="@+id/invoiceUpdDetailsInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@color/bg_primary"
                android:ems="10"
                android:hint="Реквізити"
                android:inputType="textPersonName"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp" />

            <EditText
                android:id="@+id/invoiceUpdProductInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@color/bg_primary"
                android:ems="10"
                android:hint="Код товару"
                android:inputType="textPersonName"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp" />

            <EditText
                android:id="@+id/invoiceUpdCountInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@color/bg_primary"
                android:ems="10"
                android:hint="Кількість"
                android:inputType="textPersonName"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp" />

            <EditText
                android:id="@+id/invoiceUpdPriceInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@color/bg_primary"
                android:ems="10"
                android:hint="Ціна за штуку"
                android:inputType="textPersonName"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp" />

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/updateInvoiceButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>